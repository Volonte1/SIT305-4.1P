<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EE4EF"
    android:padding="34dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/workout_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:fontFamily="@font/squada_one"
        android:text="@string/workout_time_remaining"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/rest_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_time_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/squada_one"
        android:text="@string/rest_time_remaining"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/workout_time_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_time_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/squada_one"
        android:hint="@string/workout_time_in_seconds"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/rest_time_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_time_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/squada_one"
        android:hint="@string/rest_time_in_seconds"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_time_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/squada_one"
        android:text="@string/start"
        android:textSize="22sp" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/squada_one"
        android:text="@string/stop"
        android:textSize="22sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="379dp"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp"
        android:max="100" />

</RelativeLayout>